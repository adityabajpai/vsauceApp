<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="fooddeliveryapp.totemsolutions.com.fooddeliveryapp.ThaliTypeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/julius_sans_one"
        android:gravity="center"
        android:padding="4dp"
        android:text="choose your thali"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="36dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/basicC"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/basicT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/basicthali"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="24dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/standardC"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/standardT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/standardthali"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="24dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/deluxeC"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/deluxeT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/deluxethali"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="24dp" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>

